{
    "compilerOptions": {
        "target": "ES5",
        "module": "umd",
        "declaration": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "strict": false,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
